
user-select()
    user-select arguments
    -moz-user-select arguments
    -webkit-user-select arguments
    -ms-user-select arguments

html, body
    margin 0
    height 100%

#map
    height 100%
    width 100%

.text-overlay
    padding 3px 5px
    border-radius 4px
    background lime
    font-size 30px
    position absolute
    transform translate(-50%, -50%)
    cursor pointer
    user-select(none)

.side
    width 80%
    height 80%
    position absolute
    top 10%
    bottom 0
    left 10%
    background #ffffff
    z-index 1
    opacity 1
    border-radius 25px
    box-shadow 10px 10px grey
    
.side a 
    text-align: center;
    padding 4px 4px 4px 4px
    text-decoration none
    /*font-size: 25px;*/
    color #020202
    display block
    transition 0.3s

.side a:hover, .offcanvas a:focus
    background #CCCCCC;
    
.side h1 
    color #000000 
    
.side-top
    height 10%

.information
    position absolute
    top 10%
    left 4%
    right 4%
    bottom 4%
    border 2px solid #73AD21

.popWords    
    position absolute
    top 0%
    left 0%
    right 68%
    bottom 0%
    border 2px solid #73AD21
    overflow-y: scroll
    
.conWords
    position absolute
    top 0%
    left 34%
    right 34%
    bottom 0%
    border 2px solid #73AD21
    overflow-y: scroll
    
.popTweets
    position absolute
    top 0%
    left 68%
    right 0%
    bottom 0%
    border 2px solid #73AD21
